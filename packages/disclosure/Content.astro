---
import { context } from "@astro-aria/context";

type Props = {
  [x: string]: any;
};

const { ...attributes } = Astro.props;
---

<div
  id={`content:${context("id")}`}
  aria-labelledby={`trigger:${context("id")}`}
  data-state={context("open")}
  hidden={context("open")}
  {...attributes}
>
  <slot />
</div>
