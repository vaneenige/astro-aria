---
import { context } from "@astro-aria/context";

type Props = {
  [x: string]: any;
};

const { ...attributes } = Astro.props;
---

<button
  type="button"
  id={`trigger:${context("id")}`}
  aria-controls={`content:${context("id")}`}
  aria-expanded={context("open")}
  data-state={context("open")}
  {...attributes}
>
  <slot />
</button>
