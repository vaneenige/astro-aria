---
import { context } from "@astro-aria/context";

type Props = {
  [x: string]: any;
};

const { ...attributes } = Astro.props;
---

<ul
  role="menu"
  id={`menu:${context("id")}`}
  aria-labelledby={`trigger:${context("id")}`}
  hidden
  data-state="inactive"
  {...attributes}
>
  <slot />
</ul>
