---
import { context } from "@astro-aria/context";

type Props = {
  id?: string;
  [x: string]: any;
};

const { id = "$id", ...attributes } = Astro.props;
---

<button
  role="tab"
  id={`tab:${context("id")}:${id}`}
  aria-selected={context("value", id)}
  tabindex={context("value", id)}
  aria-controls={`tabpanel:${context("id")}:${id}`}
  data-state={context("value", id)}
  {...attributes}
>
  <slot />
</button>
